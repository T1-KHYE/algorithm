public class Topic_3110 {
    public int scoreOfString(String s) {
        int sum = 0;
        s.charAt(1);
        for (int i = 0; i < s.length() - 1; i++) {
            sum += getDif(s.charAt(i), s.charAt(i + 1));
        }
        return sum;
    }

    public int getDif(char a, char b) {
        int A = Math.abs((int) (a - b));
        return A;
    }
}
